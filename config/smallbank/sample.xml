<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>POSTGRES</type>
    <driver>org.postgresql.Driver</driver>
    <url>jdbc:postgresql://localhost:5432/osprey?sslmode=disable&amp;ApplicationName=smallbank&amp;reWriteBatchedInserts=true</url>
    <username>postgres</username>
    <password>Ss123!@#</password>
    <reconnectOnConnectionFailure>true</reconnectOnConnectionFailure>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <batchsize>128</batchsize>
    <!--
    SERIALIZABLE,
    SI_ELT, RC_ELT,
    SI_FOR_UPDATE, RC_FOR_UPDATE,
    SI_TAILOR, RC_TAILOR, RC_TAILOR_LOCK, DYNAMIC
    -->
    <concurrencyControlType>SI_TAILOR</concurrencyControlType>
    <!--  hotspot  -->
<!--    <hotspotNumber>1000</hotspotNumber>-->
<!--    <hotspotPercentage>0.1</hotspotPercentage>-->
    <!--  zipfain  -->
    <zipf>0.1</zipf>


    <scalefactor>1</scalefactor>

    <!-- The workload -->
    <terminals>32</terminals>
    <works>
        <work>
            <warmup>10</warmup>
            <time>10</time>
            <rate>unlimited</rate>
            <weights>20,20,20,0,20,20</weights>
<!--            <weights>0,0,0,0,0,100</weights>-->
        </work>
    </works>

    <!-- SmallBank Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>Amalgamate</name>
        </transactiontype>
        <transactiontype>
            <name>Balance</name>
        </transactiontype>
        <transactiontype>
            <name>DepositChecking</name>
        </transactiontype>
        <transactiontype>
            <name>SendPayment</name>
        </transactiontype>
        <transactiontype>
            <name>TransactSavings</name>
        </transactiontype>
        <transactiontype>
            <name>WriteCheck</name>
        </transactiontype>
    </transactiontypes>
</parameters>
